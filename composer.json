{
    "name": "laravel/laravel",
    "description": "The skeleton application for the Laravel framework.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "laravel",
        "framework"
    ],
    "require": {
        "php": "^8.2",
        "based/momentum-trail": "^0.3.0",
        "inertiajs/inertia-laravel": "^1.3.2",
        "laravel/framework": "^11.39",
        "laravel/sanctum": "^4.0.7",
        "laravel/socialite": "^5.17.0",
        "laravel/tinker": "^2.10",
        "predis/predis": "^2.3.0",
        "socialiteproviders/discord": "^4.2.0",
        "socialiteproviders/facebook": "^4.1",
        "socialiteproviders/google": "^4.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.5.4",
        "brianium/paratest": "^7.7.0",
        "ergebnis/composer-normalize": "^2.45.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.0.2",
        "laravel/pail": "^1.2.1",
        "laravel/pint": "^1.20",
        "laravel/sail": "^1.40",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.5",
        "pestphp/pest": "^3.7.2",
        "pestphp/pest-plugin-laravel": "^3.0",
        "spatie/laravel-ignition": "^2.9.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan trail:generate"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --dir=\"app/Models/\" -N --write-mixin"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "analyse": "./vendor/bin/phpstan analyse --memory-limit=512M",
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "doc:models": "php artisan ide-helper:models --dir=\"app/Models/\" -N --write-mixin",
        "lint": "./vendor/bin/pint",
        "test": "php artisan test --parallel --no-coverage --recreate-databases",
        "test:lint": "./vendor/bin/pint --test"
    },
    "$schema": "https://getcomposer.org/schema.json"
}
